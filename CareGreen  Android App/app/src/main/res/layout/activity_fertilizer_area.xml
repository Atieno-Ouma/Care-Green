<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FertilizerAreaActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="209dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:background="@drawable/field">
                </ImageView>

            </LinearLayout>

            <TextView
                android:id="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plot Size:"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/editText"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button_health"
                android:layout_marginLeft="100dp"
                android:inputType="number"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center">
            </EditText>

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="5dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acre"
                    android:textColor="#000000"
                    android:textStyle="bold"></RadioButton>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hectare"
                    android:textColor="#000000"
                    android:textStyle="bold"></RadioButton>

            </RadioGroup>

            <Button
                android:id="@+id/calcu"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:text="Calculate"
                android:background="@drawable/button_health"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="10dp">

            </Button>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#5BB2B2B2"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/choose"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="19dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MOP/SSP/Urea"
                    android:layout_margin="5dp"
                    android:textColor="#06470B"
                    android:textStyle="bold"
                    android:textSize="17dp">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MOP"
                        android:layout_margin="5dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="17dp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SSP"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="100dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="17dp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Urea"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="100dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="17dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mop"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="17dp"></TextView>

                    <TextView
                        android:id="@+id/ssp"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="17dp"></TextView>

                    <TextView
                        android:id="@+id/urea"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="17dp"></TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#5BB2B2B2">
                </ImageView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DAP/MOP/Urea"
                android:layout_margin="5dp"
                android:textColor="#06470B"
                android:textStyle="bold"
                android:textSize="17dp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAP"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOP"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="100dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urea"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="100dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dap"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17dp"></TextView>

                <TextView
                    android:id="@+id/mop2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17dp"></TextView>

                <TextView
                    android:id="@+id/urea2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17dp"></TextView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>